{
  "name": "LinkToText (beta)",
  "version": "0.1.3",
  "manifest_version": 2,
  "description": "Copy a link that scrolls straight to the selected text on any page.",
  "permissions": ["contextMenus"],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon-black-16.png",
    "32": "icons/icon-black-32.png",
    "48": "icons/icon-black-48.png",
    "128": "icons/icon-black-128.png"
  }
}
